<%= form_for @toy do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <em><%= f.collection_select :cat_id, Cat.all, :id, :name,
                {include_blank: "Please select a cat..."}, {class: "form-control"} %></em>
  <br>
  <br>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
